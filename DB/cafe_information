CREATE TABLE CAFES_YELP (
	id INT PRIMARY KEY AUTO_INCREMENT NOT NULL, 
	name VARCHAR(128) NOT NULL,
	address VARCHAR(512) NOT NULL,
	phone_number VARCHAR(20),
	latitude DOUBLE(19,15) NOT NULL,
	longitude DOUBLE(19,15) NOT NULL,
	rating FLOAT NOT NULL,
	monday_open_hours VARCHAR(30),
	tuesday_open_hours VARCHAR(30),
	wednesday_open_hours VARCHAR(30),
	thursday_open_hours VARCHAR(30),
	friday_open_hours VARCHAR(30),
	saturday_open_hours VARCHAR(30),
	sunday_open_hours VARCHAR(30),
	photourl TEXT(512),
	take_out_available TINYINT(4),
	parking_available TINYINT(4),
	bike_parking_available TINYINT(4),
	good_for_groups TINYINT(4),
	ambience VARCHAR(64),
	wi_fi_available TINYINT(4),
	website TEXT(512),
	yelpurl TEXT(512)
)ENGINE = InnoDB;
